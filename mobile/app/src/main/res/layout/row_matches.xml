<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp">


    <TextView
        android:id="@+id/player1name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/team1Score"
        android:layout_marginStart="40dp"
        android:textColor="@android:color/black"
        android:text="Player1"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/player2name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/player1name"
        android:layout_below="@+id/player1name"
        android:text="Player2"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="VS"
        android:textSize="25sp"
        android:textColor="@android:color/black"/>


    <TextView
        android:id="@+id/match_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/status"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/team1Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/vs"
        android:layout_marginEnd="20dp"
        android:text="-"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/team2Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/vs"
        android:text="-"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/player3name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/team1Score"
        android:layout_marginEnd="40dp"
        android:textColor="@android:color/black"
        android:text="Player3"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/player4name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/player3name"
        android:layout_below="@+id/player3name"
        android:text="Player4"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
</RelativeLayout>